<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Rubik:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
    <link rel="stylesheet" href="/styles/main.css">
    <link rel="stylesheet" href="/styles/components.css">
    <link rel="stylesheet" href="/styles/login.css">

    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>

    <title>Education hub | Login to the service</title>
</head>
<body>


    <!-- NAV BAR -->
    <nav id="navigation">
        <div class="logo">
            <span class="site-name">Edu hub</span>
        </div>

        <div class="menu">
            <a href="/app" class="option">Panel</a>
            <a href="/#about" class="option">About</a>
            <a href="/#features" class="option">Features</a>
            <a href="/faq" class="option">FAQ</a>
        </div>

        <div class="buttons">
            <a href="/login" class="btn gradient-btn">Login</a>
        </div>

        <div class="hamburger">
            <div></div>
            <div></div>
        </div>
    </nav>


    <section class="section-1" id="form">
        <form action="/api/login" id="form">

            <div class="wrapper form-wrapper">
                <span class="header">Login to the panel</span>
                <span class="error" id="error-msg">The account with these credentials doesn't exists!</span>

                <div class="inputs">
                    <div class="input-wrapper">
                        <input type="text" name="login" id="login" class="input text-inp" placeholder=" ">
                        <label for="input">Type your login</label>
                    </div>

                    <div class="input-wrapper">
                        <input type="password" name="password" id="password" class="input text-inp" placeholder=" ">
                        <label for="input">Type your password</label>
                    </div>

                    <button class="btn gradient-btn">Login</button>
                </div>


            </div>

            <div class="wrapper illustration-wrapper">
                <img src="/resources/illustrations/Padlock_perspective_matte.png" alt="Login illustration">
            </div>

            <span class="info">Not registered yet? <a href="/register">Create an Account</a></span>
        </form>
    </section>

    <footer>
        <img src="/resources/waves/footer-wave.svg" alt="Footer wave" class="wave">

        <div class="column left">
            <div class="corner">
                <div class="text logo">Education hub</div>
                <div class="bar"></div>
            </div>

            <div class="corner">
                <div class="bar big"></div>
                <div class="text copyright">&copy 2021. Designed and created by <a href="https://afilidia.com">Afilidia Group</a>. All rights reserved.</div>
            </div>
        </div>
        <div class="middle">
            <div class="options">
                <a href="/#landing" class="option">Landing</a>
                <a href="/app" class="option">Panel</a>
                <a href="/#about" class="option">About</a>
                <a href="/#features" class="option">Features</a>
                <a href="/faq" class="option">FAQ</a>
            </div>

            <a href="#landing" class="to-top">
                <img src="/resources/icons/arrow-up.png" alt="Arrow up" class="icon32">
                <span class="text">to the top</span>
            </a>
        </div>

        <div class="column right">
            <div class="corner">
                <a href="https://discord.gg/PmD6ZS9PPz"><img src="/resources/icons/media/discord.png" class="media-i icon32"></img></a>
                <div class="bar small"></div>
            </div>

            <div class="corner">
                <div class="bar"></div>
                <div class="wrapper">
                    <a href="#" class="link">Privacy Policy</a>
                    <a href="#" class="link">Terms of service</a>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
    <script src="/js/animations.js"></script>
    <script src="/js/login.js"></script>
</body>
</html>