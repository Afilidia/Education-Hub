        <div class="box settings">
            <span class="header">TODO list</span>

            <div class="box add-box">
                <span class="header box-header">Add a task</span>

                <form action="/api/todo/create" method="POST" id="add-task">
                    <div class="input-wrapper">
                        <input type="text" name="task" id="add-task" class="input text-inp" placeholder="Win the code jam">
                        <label for="input">Add your task</label>
                    </div>

                    <button type="submit" class="btn">Add</button>
                </form>
            </div>

            <div class="box filter-box">
                <div class="checkbox-wrapper">
                    <input type="checkbox" name="filter-done" id="filter-done">
                    <label for="filter-done">Done tasks</label>
                </div>

                <div class="checkbox-wrapper">
                    <input type="checkbox" name="filter-pending" id="filter-pending">
                    <label for="filter-pending">Pending tasks</label>
                </div>
            </div>
        </div>
